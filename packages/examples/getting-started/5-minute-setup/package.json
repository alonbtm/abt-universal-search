{
  "name": "universal-search-5-minute-setup",
  "version": "1.0.0",
  "description": "5-minute setup example for Universal Search with TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run build && node dist/index.js",
    "dev": "npm run build:watch & npm run serve",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "http-server dist -p 3000 -o",
    "clean": "rm -rf dist",
    "test": "jest",
    "lint": "eslint src --ext .ts,.js",
    "format": "prettier --write src/**/*.{ts,js,html,css}"
  },
  "keywords": [
    "search",
    "universal-search",
    "typescript",
    "frontend"
  ],
  "author": "Universal Search Team",
  "license": "MIT",
  "dependencies": {
    "universal-search-library": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "http-server": "^14.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es2022": true
    },
    "rules": {
      "@typescript-eslint/no-unused-vars": "warn",
      "@typescript-eslint/no-explicit-any": "warn"
    }
  }
}